{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "src",
    "lib": ["ES2015"],
    "module": "ESNext",
    "paths": {
      "@jotai/*": ["jotai/*"],
      "@webworkers/*": ["webworkers/*"]
    },
    "target": "ES6"
  },
  "include": ["./src"],
  "exclude": ["dist", "build", "**/node_modules", "node_modules", ".pnpm"]
}
