// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CAMPER
  STAFF
}

model user {
  id        Int    @id @default(autoincrement())
  email     String @unique
  firstname String
  lastname  String
  year      Int
  province  String
  phoneNum  String
  role      Role   @default(CAMPER)
}
