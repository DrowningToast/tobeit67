{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "thumbnail": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "author": {
      "type": "string",
      "required": false
    },
    "body": {
      "type": "richtext"
    }
  }
}
